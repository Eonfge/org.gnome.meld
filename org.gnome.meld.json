{
    "app-id": "org.gnome.meld",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "meld",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc", "--socket=x11",
        "--device=dri",
        /* Wayland */
        "--socket=wayland",
        /* Filesystem */
        "--filesystem=host",
        "--metadata=X-DConf=migrate-path=/org/gnome/meld/"
    ],
    "modules": [
         {
            "name": "gtksourceview",
            "config-opts": [
                "--enable-vala=no",
                "--enable-gtk-doc=no"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.9.tar.xz",
                    "sha256": "699d76a453e6a3d3331906346e3dbfa25f2cbc9ec090e46635e9c6bb595e07c2"
                }
            ]
        },
        {
            "name": "meld",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/meld/3.20/meld-3.20.1.tar.xz",
                    "sha256": "a54843bc4d6cb1d31d0a58aa725091622194d50c32ef67026b35c86dda3cb249"
                }
            ],
            "modules": [
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "cp /usr/bin/git ${FLATPAK_DEST}/bin"
            ]
        }
    ]
}
